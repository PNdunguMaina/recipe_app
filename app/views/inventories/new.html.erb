<section class="add-inventory">  
  <div class="heading">
    <h1>Add Inventory</h1>
  </div>
  <div class="grid">
    <%= form_with for: @inventory, url: inventories_path do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit "Add Inventory", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</section>