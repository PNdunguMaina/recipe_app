<p style="color: green"><%= notice %></p>


<div id="recipes" class="container">
  <% @recipes.each_with_index do |recipe, idx| %>
  
    <div class="row border border-dark border-4 p-5 mt-5 fs-2">
      <%= link_to recipe_path(recipe.id), :remote => true, class: 'text-decoration-none text-dark' do %>
      <div class="col-4">
        <h2 class="pb-2">Recipe <%= idx+1 %></h2>
        <%= link_to 'Remove', recipe_path(id: recipe.id), data: { turbo_method: :delete, class: 'fs-3' } %>
      </div>
      <div class="col-4 fs-4">
        <p><%= recipe.description %></p>
      </div>
      <% end %>
    </div>
  <% end %>
</div>
